.container.follow
  .well#following
    %header
      %h2 People I follow:
    .table-responsive
      %table.table
        %thead
          %tr
            %th(width="30%")
            %th(width="20%") Products
            %th(width="20%") Followers
            %th(width="30%") Unfollow
        %tbody
          - @relationships.each do |relationship|
            %tr
              %td
                %img#gravatar(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(relationship.leader.email.downcase)}?s=60")
                = link_to relationship.leader.username, relationship.leader
                %td.extra-padding= relationship.leader.products.count
                %td.extra-padding= relationship.leader.leading_relationships.count
                %td.extra-padding
                  = link_to relationship, method: :delete do
                    .glyphicon.glyphicon-remove
