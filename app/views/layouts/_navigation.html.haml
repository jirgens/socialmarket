.row#navigation
  %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
    %button.navbar-toggle{"data-target" => "#thingsling-navbar-collapse", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: root_path} ThingSling
    #thingsling-navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          %form.navbar-form.navbar-left{role: "search"}
            %input.form-control{placeholder: "Search", type: "text"}
          %li
            %button.btn.btn-default{type: "submit"} Submit
        - if current_user
          %li= link_to "Things", root_path
          %li= link_to "Slingers", users_path
          %li= link_to "Sling a Thing", new_product_path
          %li= link_to "Following", following_path
          .pull-right
            %ul.nav.navbar-nav
              %li.dropdown
                %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
                  #{current_user.username}
                  %b.caret
                %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
                  %li
                    = link_to "View Profile", user_path(current_user)
                    = link_to 'Edit Info', edit_user_path(current_user)
                    = link_to 'Sign Out', destroy_user_session_path, :method => :delete
        - else
          %li
            %a.navbar-brand{href: root_path} ThingSling
          %li
            = link_to 'Things', root_path
          %li
            = link_to 'Sign In', new_user_session_path
